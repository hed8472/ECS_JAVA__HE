package assignment_8;
import java.util.Scanner;
public class Keychains {
	public static void main (String[]args)
	{
		Scanner keyboard = new Scanner(System.in);
		System.out.println("Ye Olde Keychain Shoppe");
		System.out.println("");
		int keychains = 0;
		int choice = 0;
		while (choice != 4)
		{
			choice = 0;
			System.out.println("1. Add keychains to order");
			System.out.println("2. Remove keychains from order");
			System.out.println("3. View current order");
			System.out.println("4. Checkout");
			System.out.println("");
			System.out.print("Please enter your choice: ");
			choice = keyboard.nextInt();
			if (choice == 1)
			{
				keychains = add(keychains);
			}
			if (choice == 2)
			{
				keychains = remove(keychains);
			}
			if (choice == 3)
			{
				view(keychains);
			}
		}
		keyboard.close();
	}
	public static int add (int in)
	{
		int out = 0;
		Scanner insert = new Scanner(System.in);
		System.out.println("");
		System.out.print("You have " + in + " keychains. How many to add? ");
		out = insert.nextInt();
		out = out + in;
		System.out.println("You now have " + out + " keychains. ");
		System.out.println("");
		return out;
	}
	public static int remove (int in)
	{
		int out = 0;
		Scanner insert = new Scanner(System.in);
		System.out.println("");
		System.out.print("You have " + in + " keychains. How many to remove? ");
		out = insert.nextInt();
		out = in - out;
		System.out.println("You now have " + out + " keychains. ");
		System.out.println("");
		return out;
	}
	public static void view (int in)
	{
		System.out.println("");
		System.out.println("You have "+ in + " keychains. ");
		System.out.println("");
	}
	public static void checkout (int in)
	{
		Scanner insert = new Scanner(System.in);
		System.out.println("Checkout");
		System.out.println("");
		System.out.print("What is your name?");
		String name = insert.next();
		System.out.println("You have " + in + "keychains.");
		System.out.println("Keychains cost $10 each. ");
		System.out.println("Total cost is $"+(in*10) + ".");


			
	}
}

